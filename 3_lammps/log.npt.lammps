kspace_style    pppm/tip4p 1.0e-5
pair_modify     mix arithmetic # Lorenz – Berthelot mixing rules
neighbor        2.0 bin
neigh_modify    every 1 delay 0 check yes
bond_style      harmonic
angle_style     harmonic

# define new system or restart previous one
if "${restart_sim} == data" then     "read_data ${restartFile}" elif "${restart_sim} == restart"     "read_restart ${restartFile}" else     "read_data system.data"
